{
  "name": "superhuman-newsletter-mcp",
  "version": "1.0.0",
  "description": "MCP server that fetches full post content from Superhuman AI and The Code newsletters for Claude digest generation. Supports local stdio and remote HTTP deployment.",
  "type": "module",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/alialfredji/superhuman-newsletter-mcp.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "newsletter",
    "superhuman",
    "ai",
    "digest"
  ],
  "author": "alialfredji",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/index.ts --http",
    "start": "node dist/index.js",
    "start:http": "node dist/index.js --http"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "express": "^5.2.1",
    "node-html-parser": "^6.1.13",
    "turndown": "^7.2.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.13.5",
    "@types/turndown": "^5.0.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
